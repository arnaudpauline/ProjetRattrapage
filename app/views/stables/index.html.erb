<h1>Stables</h1><!--fenÃªtre index / liste de toutes les stables-->

<%= link_to 'View All Horses', horses_path, data: { turbo: false } %>


<table><!--tableau qui liste les stables-->
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Number of Horses</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stables.each do |stable| %>
      <tr>
        <td><%= stable.name %></td>
        <td><%= stable.address&.line1 %>, <%= stable.address&.city %>, <%= stable.address&.country %></td>
        <td><%= stable.horses.count %></td>
        <td><%= link_to 'Show', stable %></td>
        <td><%= link_to 'Edit', edit_stable_path(stable) %></td>
        <td><%= link_to 'Destroy', stable, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Stable', new_stable_path %>
